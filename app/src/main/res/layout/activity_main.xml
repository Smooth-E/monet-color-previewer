<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/accent1_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/shape_button"
            android:backgroundTint="@color/accent1_200"
            android:padding="15dp">

            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_button"
                android:backgroundTint="@color/accent3_1000">

                <FrameLayout
                    android:id="@+id/color_droplet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@drawable/shape_button"
                    android:backgroundTint="@color/neutral1_10"/>

            </FrameLayout>

            <TextView
                android:paddingLeft="15dp"
                android:id="@+id/color_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" @android:color/system_neutral1_100 "
                android:textColor="@color/accent3_1000"
                android:textSize="17sp"/>

        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="@drawable/shape_rounded_top"
        android:backgroundTint="@color/accent1_100">

        <com.christophesmet.android.views.maskableframelayout.MaskableFrameLayout
            android:layout_margin="15dp"
            app:porterduffxfermode="DST_IN"
            app:mask="@drawable/shape_button"
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@drawable/shape_button"
            android:backgroundTint="@color/accent1_100">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/colors_list">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="15dp"/>

                </LinearLayout>

            </ScrollView>

        </com.christophesmet.android.views.maskableframelayout.MaskableFrameLayout>

    </FrameLayout>

</LinearLayout>