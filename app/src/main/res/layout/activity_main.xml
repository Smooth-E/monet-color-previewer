<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="100"
    android:background="?attr/colorOnPrimary"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:text="@string/app_name_full"
        android:textColor="?attr/colorOnSecondary"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <com.christophesmet.android.views.maskableframelayout.MaskableFrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="86"
        android:background="@drawable/shape_button"
        android:backgroundTint="?attr/colorSecondary"
        app:porterduffxfermode="DST_IN"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/color_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="13"/>

    </com.christophesmet.android.views.maskableframelayout.MaskableFrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="horizontal"
        android:gravity="right"
        android:padding="5dp">

        <FrameLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/button_download">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_round"
                android:backgroundTint="?attr/colorPrimaryVariant">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_round_file_copy_24"
                    app:tint="?attr/colorOnSecondary"
                    android:padding="10dp"/>

            </FrameLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_toLeftOf="@id/button_download"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/button_copy">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/shape_round"
                android:backgroundTint="?attr/colorPrimaryVariant">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_round_file_copy_24"
                    app:tint="?attr/colorOnSecondary"
                    android:padding="10dp"/>

            </FrameLayout>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_round"
            android:backgroundTint="?attr/colorPrimaryVariant"
            android:layout_toLeftOf="@id/button_copy"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal"
            android:padding="10dp">

            <FrameLayout
                android:id="@+id/color_droplet_outline"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="?attr/colorOnSecondary"
                android:background="@drawable/shape_round">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_round_file_copy_24"
                    android:padding="100dp"/>

                <FrameLayout
                    android:id="@+id/color_droplet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_round"
                    android:backgroundTint="?attr/colorPrimaryVariant"
                    android:layout_margin="2dp" />

            </FrameLayout>

            <TextView
                android:id="@+id/color_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/color_droplet_outline"
                android:gravity="center"
                android:text=" @color/accent1_1000 "
                android:textColor="?attr/colorOnSecondary"
                android:textSize="12sp" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>